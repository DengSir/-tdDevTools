<Ui xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Button name="tdDevToolsEventItemTemplate" virtual="true">
        <Size x="80" y="24" />
        <Frames>
            <Button parentKey="IgnoreButton" inherits="tdDevToolsClearButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" x="-5" y="0" />
                </Anchors>
                <Scripts>
                    <OnEnter>
                        self:GetParent():LockHighlight()
                    </OnEnter>
                    <OnLeave>
                        self:GetParent():UnlockHighlight()
                    </OnLeave>
                    <OnClick>
                        self:GetParent().owner:OnItemIgnoreClick(self:GetParent())
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Selected" hidden="true">
                    <Color r="1" g="1" b="1" a="0.2" />
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Time" inherits="tdDevToolsFontImportant" justifyH="RIGHT" wordWrap="false">
                    <Size x="100" />
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0" />
                    </Anchors>
                </FontString>
                <FontString parentKey="Text" inherits="tdDevToolsFontHighlight" justifyH="LEFT" wordWrap="false">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Time" relativePoint="RIGHT" x="5" y="0" />
                        <Anchor point="RIGHT" x="-5" y="0" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <HighlightTexture>
            <Color r="1" g="1" b="1" a="0.2" />
        </HighlightTexture>
        <Scripts>
            <OnClick>
                self.owner:OnItemClick(self)
            </OnClick>
        </Scripts>
    </Button>

    <Frame parentKey="Event" parent="tdDevToolsFrame" parentArray="tabFrames" enableMouseWheel="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.Inset" relativePoint="TOPLEFT" />
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Inset" relativePoint="BOTTOMRIGHT" />
        </Anchors>
        <Frames>
            <Frame parentKey="EventContainer">
                <Size x="500" />
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="BOTTOMLEFT" />
                </Anchors>
                <Frames>
                    <Frame parentKey="Header">
                        <Size y="22" />
                        <Anchors>
                            <Anchor point="TOPLEFT" />
                            <Anchor point="TOPRIGHT" />
                        </Anchors>
                        <Layers>
                            <Layer level="BORDER">
                                <Texture inherits="_tdDevToolsLineTemplate">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" />
                                        <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                            <Layer level="ARTWORK">
                                <FontString inherits="tdDevToolsFontImportant" text="Events">
                                    <Anchors>
                                        <Anchor point="LEFT" x="5" y="0"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Frames>
                            <Button parentKey="ClearButton" inherits="tdDevToolsButtonTemplate" text="Clear">
                                <Size x="80" y="24" />
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" x="0" y="-1" />
                                </Anchors>
                                <Scripts>
                                    <OnClick>
                                        self:GetParent():GetParent():GetParent():Clear()
                                    </OnClick>
                                </Scripts>
                            </Button>
                            <Button parentKey="ToggleButton" inherits="tdDevToolsButtonTemplate" text="Start">
                                <Size x="80" y="24" />
                                <Anchors>
                                    <Anchor point="RIGHT" relativeKey="$parent.ClearButton" relativePoint="LEFT" x="1" y="0" />
                                </Anchors>
                                <Scripts>
                                    <OnClick>
                                        self:GetParent():GetParent():GetParent():Toggle()
                                    </OnClick>
                                </Scripts>
                            </Button>
                        </Frames>
                    </Frame>
                    <ScrollFrame parentKey="EventList" inherits="tdDevToolsHybridScrollFrameTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.Header" relativePoint="BOTTOMLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Anchors>
                        <Layers>
                            <Layer level="BORDER">
                                <Texture inherits="tdDevToolsLineRightTemplate" />
                            </Layer>
                        </Layers>
                    </ScrollFrame>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>
